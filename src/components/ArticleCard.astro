---
export interface Props {
  title: string;
  body: string;
  href: string;
  tags: { title: string; href: string }[];
}

const { href, title, body, tags } = Astro.props;
---

<div>
  <li class="link-card">
    <a href={href}>
      <h2>
        {title}
      </h2>
      <p>
        <strong>{body}</strong>
      </p>
    </a>
  </li>
  <div class="tag">
    <strong>tags:</strong>
    {tags.map((tag) => <a href={`/tags/${tag}`}>{tag}</a>)}
  </div>
</div>

<style lang="scss">
  .link-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    padding: 0.15rem;
    border-style: solid;
    border-radius: 0.5rem;
    border-color: var(--secondary-color);
    border-width: 2px;

    background-color: #edf1d6;
    background-size: 200% 100%;
    background-image: linear-gradient(
      to right,
      var(--highlight-color),
      #edf1d6 50%
    );
    background-position: -100% 0;

    transition: 300ms;
    &:hover {
      background-position: -200% 0;
    }
  }
  .link-card > a {
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    border-radius: 0.35rem;
    color: #111;
    background-color: #edf1d6;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: #444;
  }
  .time {
    font-size: 0.8em;
  }
  .tag {
    display: flex;
    justify-content: left;
    align-items: baseline;
    flex-wrap: wrap;
    width: 50%;
    padding: 1rem 1.3rem;
    // margin-left: auto;
    // margin-right: auto;

    A {
      font-weight: 750;
      text-align: center;
      // text-align: center;
      // flex-grow: 1;
      text-decoration: none;
      color: #444;
      border-width: 0px;
      border-style: solid;
      border-radius: 1em;
      margin: 0.5rem;
      padding: 0.5rem;
      background-color: var(--primary-color);
      transition: 200ms;

      &:hover {
        background-color: var(--secondary-color);
      }
    }
  }
</style>
