---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  frontmatter: any;
}

const { title, frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? title : frontmatter.title}</title>
  </head>
  <body>
    <Header />
    <div class="container">
      <div class="torn torn-left"></div>
      <div class="content"><slot /></div>
      <div class="torn torn-right"></div>
    </div>
    <div class="torn-bottom"></div>
    <Footer />
  </body>
</html>

<style is:global lang="scss">
  :root {
    --highlight-color: #ff9494;
    --primary-color: #ffe3e1;
    --secondary-color: #ffd1d1;
    --header-height: 60px;
  }
  body {
    margin: 0px;
    min-width: 100%;
    min-height: 100%;

    background-color: var(--secondary-color);
    background-image: linear-gradient(
        var(--secondary-color) 2px,
        transparent 2px
      ),
      linear-gradient(90deg, var(--secondary-color) 2px, transparent 2px),
      linear-gradient(var(--secondary-color) 1px, transparent 1px),
      linear-gradient(
        90deg,
        var(--secondary-color) 1px,
        var(--primary-color) 1px
      );
    background-size: 50px 50px, 50px 50px, 10px 10px, 10px 10px;
    background-position: -2px -2px, -2px -2px, -1px -1px, -1px -1px;
  }
  html {
    font-family: system-ui, sans-serif;
    min-width: 100%;
    min-height: 100%;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
  .astro-code {
    padding: 10px;
    border-radius: 1em;
    background-color: #2a2a2a !important;
  }

  .torn {
    display: block;
    position: absolute;
    top: 0;
    width: 35px;
    height: 100%;

    @media screen and (max-width: 97em) {
      display: none;
    }
  }
  .torn-left {
    background: url("/torn-left.png");
    background-size: contain;
    left: -20px;
  }
  .torn-right {
    background: url("/torn-right.png");
    background-size: contain;
    background-position-y: 50%;
    right: -20px;
  }
  .torn-bottom {
    z-index: -1;
    background: url("/torn.png");
    background-size: contain;
    background-position-y: 50%;
    background-repeat: repeat-x;
    max-width: calc(90em + 70px);
    width: calc(100% - 4em + 64px);
    height: 35px;
    margin-left: auto;
    margin-right: auto;
    margin-top: -15px;
  }

  .container {
    z-index: 0;
    margin-left: auto;
    margin-right: auto;
    padding: 0.15rem;
    padding-left: 2em;
    padding-right: 2em;
    max-width: 90em;
    min-height: calc(90vh - 0.3em - var(--header-height));
    width: calc(100% - 4em);

    @media screen and (max-width: 97em) {
      max-width: 100vw;
    }

    background-color: white;
    position: relative;
    color: #444;
    display: flex;
    flex-direction: column;
  }

  .content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    height: 100%;
    img {
      display: block;
      margin-left: auto;
      margin-right: auto;
      max-width: 100%;
    }
  }

  @font-face {
    font-family: "Consolas";
    src: url("/Consolas.ttf") format("truetype");
  }

  @font-face {
    font-family: "Zyzol";
    src: url("/Zyzol.otf") format("opentype");
  }

  @font-face {
    font-family: "Girly";
    src: url("/Girly.otf") format("opentype");
  }
</style>
