---
import Layout from "../layouts/Layout.astro";
---

<Layout title="About" frontmatter={null}>
  <span>
    <h2>Written, hosted and created by cat</h2>
    <img src="/avatar.png" class="avatar" />
    <h4>A cat playing with a computer</h4>
  </span>
  <p>
    <a class="link" href="https://steamcommunity.com/id/ironsm4sh">Steam</a>
    <a class="link" href="mailto:contact@ironsm4sh.nl">Email</a>
    <a class="link" href="https://git.ironsm4sh.nl/">Gitlab</a>
  </p>
</Layout>

<style lang="scss">
  a,
  span,
  .centered {
    text-decoration: none;
    color: #444;
    text-align: center;
    display: block;
    width: fit-content;
    margin-left: auto;
    margin-right: auto;
  }
  .avatar {
    border-style: solid;
    border-width: 2px;
    border-color: #444;
    border-radius: 50%;
    width: 30vh;
    transition: 250ms;
    &:hover {
      border-radius: 3%;
    }
  }
  h2 {
    font-size: 2.25em;
  }
  .link {
    margin: 10px;
    margin-left: auto;
    margin-right: auto;
    width: 200px;
    border-style: solid;
    border-width: 1px;
    border-radius: 1em;
    font-size: 1.25em;
    transition: 200ms;

    background-color: var(--primary-color);
    &:hover {
      background-color: var(--secondary-color);
    }
  }
  h4 {
    font-family: "Consolas";
    font-size: 1.75em;
    font-weight: 100;
  }
</style>
